<div class="container log-in-container">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email",placeholder: "Type email"  } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", placeholder: "Type current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn-secondary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <!--Sign up with social media-->

  <h5>Register with:</h5>
<div class="sign-in-container d-flex justify-content-center">

  <a href="#"><i class="fab fa-instagram"></i></a>
  <a href="#"><i class="fab fa-facebook"></i></a>
  <a href="#"><i class="fab fa-twitter"></i></a>
  <a href="#"><i class="fab fa-google"></i></a>

</div>

</div>
