<div class="container sign-up-container">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                input_html: { autocomplete: "given-name", placeholder: "Type first name" } %>
    <%= f.input :last_name,
                required: true,
                input_html: { autocomplete: "family-name", placeholder: "Type last name" } %>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", placeholder: "Type email" } %>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", placeholder: "Type password" } %>
    <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password",placeholder: "Type password" } %>
    <%= f.input :vet,
                as: :boolean,
                label: "Sign up as a vet?" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class:"btn-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
