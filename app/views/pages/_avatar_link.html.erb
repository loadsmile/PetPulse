<%# This partial template renders avatar links for each pet in the @pets collection. %>
<% @pets.each do |pet| %>
  <% if pet.avatar_pic.attached? %>
    <div>
    <% condition = pet.id == params[:id].to_i ? "pet-avatar" : "" %>
      <%= link_to pet_path(pet) do %>
        <%= image_tag pet.avatar_pic.service.send(:object_for, pet.avatar_pic.key).public_url, class: "rounded-circle #{condition}", crop: :fill, width: 70, height: 70 %>
      <% end %>
    </div>
  <% else %>
    <div>
      <%= link_to pet_path(pet) do %>
        <%= image_tag("training.png", alt: "Placeholder Image", class: "placeholder-avatar rounded-circle", width: 70, height: 70) %>
      <% end %>
    </div>
  <% end %>
<% end %>
