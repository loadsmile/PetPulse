<div class="message-<%= message.id %>">
  <!-- If the message comes from a user vet -->
  <% if message.user.vet? %>
    <!-- give id vet-message to style different -->
    <div id="vet-message">
      <small>
        <strong>Vet: <%= message.user.first_name %></strong>
        <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
      <p><%= message.content %></p>
    </div>
  <% else %>
  <!-- Owner message -->
      <small>
        <strong><%= message.user.first_name %></strong>
        <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
      </small>
    <p><%= message.content %></p>
  <% end %>
</div>
