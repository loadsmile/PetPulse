<!-- Form to edit new Post-->
<!-- TODO: Allow File Upload -->
<%= simple_form_for([@pet, post], html: { class: 'form-horizontal' }) do |f| %>
  <div class="modal-header">
    <h5 class="modal-title" id="editPostModalLabel">Update Post for <%= @pet.name %></h5>
  </div>
  <div class="modal-body">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :images, as: :file, accept: 'image/png, image/gif, image/jpeg', input_html: {multiple: true}, class: "form-control" %>
    <%= f.input :files, as: :file, accept: 'file/pdf', input_html: {multiple: true}, class: "form-control" %>
  </div>
  <div class="modal-footer">
    <%= f.button :submit, 'Update Post', class: 'btn btn-primary-reverse' %>
    <button type="button" class="btn btn-secondary-reverse" data-bs-dismiss="modal">Close</button>
  </div>
<% end %>
<!-- End of Form -->
