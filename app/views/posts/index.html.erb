<div class="container">
  <% @posts.each do |post| %>
    <div class="card my-1 p-1">
      <%# <h2><%= link_to post.title, post %>
      <%# <%= post.content[0..100] %>
      <h2>
        <%= post.title %>
      </h2>

      <p>
        <%= post.content[0..100] %>
      </p>



    <%# <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "btn btn-danger" %>

      <div>
        <%= link_to edit_pet_post_path(@pet, post) do %>
